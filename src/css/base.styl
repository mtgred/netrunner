@require "opacity"
@require "palette"
*
    -moz-box-sizing: border-box
    -webkit-box-sizing: border-box
    box-sizing: border-box

html, body, #main-content
    margin: 0
    padding: 0
    height: 100vh

body
    color: gray-dark
    background-color: black-solid
    font-family: "Titillium Web", "Helvetica Neue", sans-serif
    font-size: .75rem
    line-height: 1.125rem

h1, h2, h3, h4
    line-height: normal
    margin: 0 0 8px

h1
    font-size: 2.25rem

h2
    font-size: 1.5rem

h3
    font-size: 1.25rem
    margin: 0 0 6px

h4
    font-size: .875rem
    line-height: 18px
    margin: 0 0 4px

a
    text-decoration: none
    color: gold-base
    transition(all 0.2s ease-in-out)
    cursor: pointer

    &:hover
        color: blue-core
        text-decoration: none

table
    border-collapse: collapse

pre
    font-family: "Titillium Web", "Helvetica Neue", sans-serif
    white-space: -moz-pre-wrap
    white-space: -o-pre-wrap
    white-space: pre-wrap
    margin: 8px 0

ul
    margin: 0
    padding: 0

ul.list
    padding-left: 30px
    margin: 10px 0

    li
        margin-bottom: 10px

    p
        margin: 2px 0

ul.list.compact li
    margin-bottom: 2px

p
    margin: 8px 0

section
    margin-bottom: 16px

input, select, textarea
    font-family: "Titillium Web", "Helvetica Neue", sans-serif
    font-size: .75rem
    border-radius: 4px
    padding: 0 5px
    margin: 0
    height: 28px
    background-color: alpha(white-solid, o-90)
    border: 2px solid alpha(green-dark, o-80)
    color: black-solid
    transition(all 0.2s ease-in-out)
    outline: none

    &:focus
        box-shadow(0 0 6px blue-light)
        border-color: blue-light !important

input[type="radio"], input[type="checkbox"]
    height: auto
    vertical-align: middle
    margin: -3px 8px 0 0

label
    padding: 3px 0
    cursor: pointer

button, a.button
    display: inline-block
    border-radius: 4px
    font-size: .75rem
    padding: 4px 12px
    margin: 0 8px 0 0
    background-color: alpha(gold-base, o-40)
    border: 1px solid gold-base
    color: white-solid
    text-shadow: 0 1px 2px alpha(black-solid, o-60)
    cursor: pointer
    height: 1.75rem
    outline: none
    transition(all 0.2s ease-in-out)
    cursor: pointer

    &:focus, &:hover
        box-shadow(0 0 6px blue-light)
        border-color: blue-light

button.small
    padding: 0
    font-size: .75rem
    line-height: 1rem
    height: 20px
    width: 20px
    background-color: transparent
    border-color: white-solid

    &:hover
        background-color: alpha(gold-base, o-40)
        border-color: gold-base

button.on
    background-color: alpha(gold-mid, o-90)
    border: 1px solid yellow-core

button.off
    background-color: alpha(gold-base, o-40)

.centered
    text-align: center
    margin: 0 auto

.block-link
    cursor: pointer
    border: 1px solid transparent
    padding: 0 5px
    border-radius: 4px
    display: block
    margin: 0 -4px

    &:hover:not([disabled])
        background-color: alpha(gold-base, o-40)
        border: 1px solid gold-base

.infobox
    border: 1px solid gold-base
    background-color: alpha(gold-base, o-40) !important
    padding:4px 8px
    margin:15px
    border-radius: 4px

    &::before
        display: block;
        float: left;
        margin: 10px 5px 10px 0px
        content: "!";
        border-radius: 50%;
        border: 1px solid lighten(gold-base, 25);
        color: lighten(gold-base, 25);
        width: 20px;
        height: 20px;
        line-height: 21px;
        text-align: center;
        font-weight: normal;

    &.one-line::before
        margin: -2px 5px 5px 0px

    &>p
        margin: 0px 4px 0px 0px

[draggable]
    -moz-user-select: none
    -webkit-user-select: none
    user-select: none
    -webkit-user-drag: element

.card.dragged
    opacity: 1
    box-shadow(0 0 1px 2px blue-light)

.dragover
    border-color: gold-base !important

.name-area
    flex(1)
    display-flex()
    flex-direction(row)
    min-height: 35px
    align-items: center

    .avatar
        height: 32px

    .name-box
        flex(1)
        display-flex()
        flex-direction(column)
        min-height: 1px

.avatar
    vertical-align: middle
    margin-right: 5px
    border-radius: 3px

.username
    font-weight: bold
    font-size: .875rem
    margin-right: 5px

// Scrollbars

::-webkit-scrollbar-thumb
    background-color: alpha(blue-dark, o-80)
    border-radius: 3.5px
    box-shadow: 0 0 3px 0 alpha(black-solid, o-60), inset 0 0 0 1px white-solid

::-webkit-scrollbar
    width: 14px;

::-webkit-scrollbar-thumb:hover
    box-shadow: 0 0 3px 0 alpha(black-solid, o-60), inset 0 0 0 1px gold-base
    background: alpha(gold-base, o-40)

.active
    color: gold-base
    transition(all 0.2s ease-in-out)

.smallwarning
    position: relative
    background: alpha(gold-base, o-40)
    border: 1px solid gold-base
    color: white-solid
    margin-left: 2px
    margin-right: 2px
    width: 12px
    display: inline-block
    text-align: center

.warning
    position: relative
    background: blue-mid
    border: 1px solid gray-light
    margin-left: 12px
    width: 12px
    display: inline-block
    text-align: center

.warning:after, .warning:before
    right: 100%
    top: 50%
    border: solid transparent
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none

.warning:after
    border-right-color: blue-mid
    border-width: 8px
    margin-top: -8px

.warning:before
    border-right-color: gray-light
    border-width: 10px
    margin-top: -10px

.fake-link
    color: gold-base
    cursor: pointer

button .fake-link
    color: white-solid

.standard, .eternal, .system-gateway, .startup, .snapshot, .snapshot-plus, .sunset, .neo, .legal
    color: green-bright
    border-color: green-bright

.casual
    color: yellow-core
    border-color: yellow-core

.invalid
    color: orange-dark
    border-color: orange-dark

.darken
    background-color: black-solid
    opacity: 0.85

.float-left
    float: left

.float-center
    display: flex
    justify-content: center
    margin-bottom: 2px

.float-right
    float: right
    margin-left: 10px;

.clear
    clear: both

.italic
    font-style: italic

span.small
    font-size: .75rem
    font-weight: normal
    margin-left: 10px

.ellipsis
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

.disabled
    opacity: 0.5
    box-shadow(none)
    cursor: auto

    &:hover, &:focus
        box-shadow(none)
        border-color: gold-base

.rotated
    color: white-solid
    background-color: gray
    border-color: orange-dark
    opacity: 0.5
    box-shadow(none)
    cursor: auto

    &:hover, &:focus
        box-shadow(none)
        border-color: gold-base

.label
    border: 1px solid white-solid
    border-radius: 4px
    padding: 2px 5px
    font-size: .75rem
    margin: 0 10px

* html .clearfix
    height: 1%
    overflow: visible

*+html .clearfix
    min-height: 1%

.clearfix:after
    clear: both
    content: "."
    display: block
    height: 0
    visibility: hidden
    font-size: 0

.caret
    display: inline-block
    width: 0
    height: 0
    margin-left: 5px
    vertical-align: middle
    border-top: 4px solid
    border-right: 4px solid transparent
    border-left: 4px solid transparent

.system
    margin-bottom: 8px
    line-height: 15px

.image-container
    position: relative

.panel
    border-radius: 4px
    padding: 5px 10px
    border: 1px solid alpha(blue-dark, o-80)
    margin: 5px

.panel-top
    border-radius: 4px 4px 0px 0px

.panel-mid
    border-radius: 0px

.panel-bottom
    border-radius: 0px 0px 4px 4px

.container
    width: 1000px
    margin: 0 auto

.blue-shade
    background-color: alpha(blue-dark, o-80)
    box-shadow: 0 0 12px alpha(black-solid, o-60), inset 0 0 0 1px most-alpha(black-solid, o-60)

.green-shade
  background-color: alpha(green-dark, o-80)
  box-shadow: 0 0 12px alpha(black-solid, o-60), inset 0 0 0 1px most-alpha(black-solid, o-60)

.active-player
    border: 1px solid gold-base

// Layout

#main
    height: 100%
    overflow: hidden
    width: 100%
    position: relative

    .item
        padding-top: 31px
        height: 100vh
        color: white-solid

// Version string on main page
#version
    position: absolute
    bottom: 1px
    left: 1px
    span
        color: gray-light
        font-size: .75rem


@keyframes highlight
    from
        background: yellow-dark
    to
        background: none

@keyframes fadein
    from
        opacity: 0
    to
        opacity: 1

.content-page
    padding: 12px 20px
    width: 650px
    margin: 40px auto 10px
    height: 90vh
    overflow: auto
