    .playable
        cursor: pointer

    .bg
        position: absolute
        top: 0
        left: 0

    .deck, .discard, .identity
        position: relative
        height: 84px
        width: 60px
        border-radius: 4px

    .server-card
        position: relative
        min-height: 84px
        min-width: 60px

