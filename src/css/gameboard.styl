    .popup
        display: none
        position: absolute
        width: 590px
        min-height: 92px
        z-index: 20

        &.opponent
            top: 100%
            bottom: auto

        .card
            float: left
            margin-right: 4px
            margin-bottom: 2px

        a
        label
        .hand-size
            display: inline-block
            margin: 0 10px 8px 4px

        .stat-controls
            display: inline-block
            width: 30%

